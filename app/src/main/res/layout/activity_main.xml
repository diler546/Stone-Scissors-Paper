<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnPaper"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Бумага"
        app:layout_constraintTop_toBottomOf="@+id/txtresult"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btnLizard"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="12dp"
        android:text="Ящерица"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSpok" />

    <Button
        android:id="@+id/btnRock"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Камень"
        app:layout_constraintTop_toBottomOf="@+id/btnPaper"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btnScissors"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Ножницы"
        app:layout_constraintTop_toBottomOf="@+id/txtresult"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btnSpok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Спок"
        app:layout_constraintTop_toBottomOf="@+id/btnScissors"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="384dp"
        android:layout_height="399dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shemknb" />

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="381dp"
        android:layout_height="82dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Выберите предмет, затем выберет компьютер (Выбор обоих выделится цветом)"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="24dp"
        android:text="Начать"
        app:layout_constraintStart_toEndOf="@+id/btnSpok"
        app:layout_constraintTop_toBottomOf="@+id/btnScissors" />

</androidx.constraintlayout.widget.ConstraintLayout>